{
  "name": "op-chalk",
  "version": "1.0.0",
  "description": "an opinionated chalk",
  "main": "src/index.ts",
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && rollup -c",
    "publish:public": "npm publish --access=public",
    "prepublishOnly": "npm run format:check && npm run lint && npm run build",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "test": "jest",
    "test:cov": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oussamabouchareb/op-chalk.git"
  },
  "keywords": [
    "chalk",
    "opinionated",
    "errors"
  ],
  "author": "oussama bouchareb",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oussamabouchareb/op-chalk/issues"
  },
  "homepage": "https://github.com/oussamabouchareb/op-chalk#readme",
  "dependencies": {
    "chalk": "*"
  },
  "peerDependencies": {
    "chalk": "*"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@types/jest": "^27.0.2",
    "@types/node": "^8.10.66",
    "@typescript-eslint/eslint-plugin": "4.28.2",
    "@typescript-eslint/parser": "4.28.2",
    "eslint": "7.30.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.59.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "npmName": "op-chalk",
  "npmFileMap": [
    {
      "basepath": "/build/",
      "files": [
        "*.js"
      ]
    }
  ]
}
